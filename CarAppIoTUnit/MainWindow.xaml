<Window x:Class="CarAppIoTUnit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Background="DarkGray"
        Title="" Height="650" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2.5*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <!--Titles-->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <TextBlock  
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    TextWrapping="Wrap" 
                    FontSize="20" Text="|          Fans          |"/>
            </Grid>

            <Grid Grid.Column="1">
                <TextBlock  
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    TextWrapping="Wrap" 
                    FontSize="20" Text="|        Locks        |"/>
            </Grid>

            <Grid Grid.Column="2">
                <TextBlock  
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    TextWrapping="Wrap" 
                    FontSize="20" Text="|        Charge        |"/>
            </Grid>

        </Grid>

        <Grid Grid.Row="1" Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!--FAN-->
            <Grid Grid.Column="0">
                <TextBlock RenderTransformOrigin="0.5 0.5" x:Name="FanIcon" 
                           FontFamily="{StaticResource FontAwesome-Solid}" Text="&#xf863;" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                FontSize="150">
                    <TextBlock.RenderTransform>
                        <RotateTransform x:Name="FanBlade" Angle="0"/>
                    </TextBlock.RenderTransform>
                </TextBlock>

            </Grid>
            <!--LOCK-->
            <Grid Grid.Column="1">
                <TextBlock x:Name="LockIcon" FontFamily="{StaticResource FontAwesome-Solid}" Text="&#xf023;" 
                           HorizontalAlignment="Center" 
    VerticalAlignment="Center" 
    FontSize="150" />
            </Grid>
            <!--CHARGING-->
            <Grid Grid.Column="2">
                <TextBlock x:Name="ChargeIcon" FontFamily="{StaticResource FontAwesome-Solid}" Text="&#xf0e7;" 
    HorizontalAlignment="Center" 
    VerticalAlignment="Center" 
    FontSize="150"
    Foreground="LightGray"/>
            </Grid>

        </Grid>

        <!--SUB-Titles-->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <TextBlock x:Name="FanStatus" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   TextWrapping="Wrap" 
                   FontSize="15" Text="|  Status:OFF  |"/>
            </Grid>

            <Grid Grid.Column="1">
                <TextBlock x:Name="LockStatus" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="top"
                   TextWrapping="Wrap" 
                   FontSize="15" Text="|  Status: Locked  |"/>
            </Grid>

            <Grid Grid.Column="2">
                <TextBlock x:Name="ChargeStatus" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   TextWrapping="Wrap" 
                   Margin="5 0 5 0"
                   FontSize="14" Text="|  Status: Not Charging  |"/>
            </Grid>
        </Grid>

           <!--BUTTONS-->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Switch 1 -->

            <Button Grid.Column="0" Content="Turn On" Click="Fan_Click" Tag="FanButton"
                    FontSize="20"/>

            <!-- Switch 2 -->

            <Button Grid.Column="1" Content="Unlock" Click="Lock_Click" Tag="LockButton" 
                    FontSize="20"/>

            <!-- Switch 2 -->

            <Button Grid.Column="2" Content="Resume" Click="Charge_Click" Tag="ChargeButton"
                    FontSize="20"/>

        </Grid>
              

            <TextBlock x:Name="ConnectivityStatus" 
               Grid.Row="4" 
               HorizontalAlignment="Center" 
               Margin="0 20" 
               TextWrapping="Wrap" 
               FontSize="20" 
               Foreground="Red" 
               Text="Disconnected From Car"/>
    </Grid>
    
    <!--FANBLADE ROTATE-->

    <Window.Resources>
        <Storyboard x:Key="FanStoryboard">
            <DoubleAnimation 
                Storyboard.TargetName="FanBlade"
                Storyboard.TargetProperty="Angle"
                From="0" To="360"
                RepeatBehavior="Forever"/>
        </Storyboard>
    </Window.Resources>
    
</Window>
